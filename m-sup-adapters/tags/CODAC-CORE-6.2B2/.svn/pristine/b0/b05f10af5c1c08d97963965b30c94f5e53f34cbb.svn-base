SUBDIRS=$(dir $(wildcard */Makefile))

BOLD=\e[1m
NC=\e[0m

all:

%:
	@$(foreach dir, $(SUBDIRS), echo -e "$(BOLD)Building $(dir:/=)...$(NC)" && $(MAKE) -C $(dir) $@ -j 1 &&) :

# Note: "-j 1" above was inserted to address intermittent build errors on SNL state-machines where the .i file is sometimes not found.
