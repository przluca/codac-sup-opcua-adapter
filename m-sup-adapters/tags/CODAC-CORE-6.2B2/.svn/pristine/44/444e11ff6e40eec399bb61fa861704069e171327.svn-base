<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iter.codac.units</groupId>
    <artifactId>sup-adapters</artifactId>
    <packaging>codac</packaging>
    <version>1.0</version>
    <name>CODAC Supervision and Automation (SUP) module</name>
    <description>CODAC Supervision and Automation (SUP) module</description>
    <url>http://www.iter.org/</url>

    <!-- project properties -->
    <properties>
        <unit.type>module</unit.type>
        <!-- SNL Makefiles do not support parallel execution. Symptom: Missing .i files. -->
        <makefile.flags>-j1</makefile.flags>
    </properties>

    <!-- parent pom.xml -->
    <parent>
        <groupId>org.iter.codac.units</groupId>
        <artifactId>maven-iter-settings</artifactId>
        <version>6.2.0</version>
    </parent>

    <!-- unit owner and developers -->
    <developers>
        <developer>
            <id>bauvirb</id>
            <roles>
                <role>unit owner</role>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>meyerk</id>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <!-- configuration of how the project is built -->
    <build>
        <!-- default phase is compile -->
        <defaultGoal>compile</defaultGoal>
        <!-- this command is executed if you just write 'mvn' -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-iter-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <packaging>
                        <package>
                            <!-- Services wrap-up start-up script -->
                            <include type="script" scriptType="system" file="sup-adapters" />
                            <!-- Adapters - Start-up scripts -->
                            <include type="script" scriptType="codac-service" file="sup-adapter-test-tpl" />
                            <include type="script" scriptType="codac-service" file="sup-adapter-ctrl-pcs" />
                            <include type="script" scriptType="codac-service" file="sup-adapter-d1-j4-fir" />
                            <include type="script" scriptType="codac-service" file="sup-adapter-d1-j4-mmwi" />
                            <include type="script" scriptType="codac-service" file="sup-adapter-fuel-fig" />
                            <include type="script" scriptType="codac-service" file="sup-adapter-fuel-fip" />
                            <!-- Adapters - Implementation -->
                            <include type="file" source="main/c++/statemachines/cos-adapter/cos-adapter" target="bin/cos-adapter" /> 
                            <include type="file" source="main/c++/statemachines/pcs-adapter/pcs-adapter" target="bin/pcs-adapter" /> 
                            <!-- Explicit dependencies -->                            
                            <requires version="current">%{codac_rpm_prefix}-sup-common</requires>
                            <!-- Not sure if required -->
                        </package>
                        <package name="devel">
                            <!-- Header files -->
                            <!-- ToDo: Add header files -->

                            <!-- Explicit dependencies -->                            
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}-tools</requires>
                            <!-- XSLT files -->
                            <requires version="current">%{codac_rpm_prefix}-sup-devel</requires>
                            <!-- COS Headers -->
                        </package>
                        <package name="tools">
                            <!-- Useful scripts -->
                            <include type="script" scriptType="user" file="sup-ea2snl.sh" name="sup-ea2snl" />
                            <!--<include type="file" source="main/scripts/sup-ea2snl.sh" target="tests/sup/scripts" />-->
                            <!-- Resources -->
                            <include type="file" source="main/resources" target="tests/sup/resources" />
                            <!-- Explicit dependencies -->                            
                            <requires version="current">%{codac_rpm_prefix}-log-lib</requires>
                            <requires version="current">%{codac_rpm_prefix}-sup-fatsat-snapshot</requires>
                            <!-- See bug 8295 -->
                            <requires version="current">saxon91</requires>
                        </package>
                        <package name="tests">
                            <!-- Library, etc. -->
                            <include type="file" source="lib" target="lib">
            		        <include>lib55a0*.so.*</include>
			    </include>
                            <!-- Programs -->
			    <!-- Configuration, etc. -->
                            <include type="file" source="test/c++/55a0-loader" target="tests/sup/55a0-loader"/>
                            <include type="file" source="test/c++/opcua-loader" target="tests/sup/ua-loader"/>
                            <include type="file" source="test/c++/v3-loader" target="tests/sup/v3-loader"/>
                            <!-- Package dependencies -->
                            <requires version="current">%{codac_rpm_prefix}-sup-core</requires>
                            <requires version="current">%{codac_rpm_prefix}-test-framework</requires>
                            <requires version="current" buildOnly="true">%{codac_rpm_prefix}-marte-core-devel</requires> <!-- CRC template class from MARTe core in test program -->
                            <requires version="current" buildOnly="true">%{codac_rpm_prefix}-sup-core-devel</requires>
                            <requires version="current" buildOnly="true">gtest-devel</requires>
                        </package>
                    </packaging>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
