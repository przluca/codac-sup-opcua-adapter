<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iter.codac.units</groupId>
    <artifactId>sdn-core</artifactId>
    <packaging>codac</packaging>
    <!-- See ChangeLog file for details -->
    <version>1.3.1</version>
    <name>CODAC Core System sdn-core module</name>
    <description>CODAC Core System - SDN core library module</description>
    <url>http://www.iter.org/</url>
 
    <!-- project properties -->
    <properties>
        <unit.type>module</unit.type>
	<integrity.level>1</integrity.level>
 	<cppcheck.args>--enable=all --suppress=missingIncludeSystem --suppress=missingInclude --inline-suppr</cppcheck.args>
	<rpm.release.num>1</rpm.release.num>
    </properties>

    <!-- parent pom.xml -->
    <parent>
        <groupId>org.iter.codac.units</groupId>
        <artifactId>maven-iter-settings</artifactId>
        <version>6.2.0</version>
    </parent>

    <!-- unit owner and developers -->
    <developers>
        <developer>
            <id>bauvirb</id>
	    <name>Bertrand Bauvir</name>
	    <organization>ITER Organisation</organization>
	    <email>bertrand.bauvir@iter.org</email>
            <roles>
                <role>unit owner</role>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <!-- configuration of how the project is built -->
    <build>
        <!-- default phase is compile -->
        <defaultGoal>compile</defaultGoal>
        <!-- this command is executed if you just write 'mvn' -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-iter-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <packaging>
                        <package>
                            <!-- Library -->
                            <include type="file" source="lib/libsdn-core.a" target="lib/libsdn-core.a" />
                            <include type="file" source="lib/libsdn-core.so.${project.version}" target="lib/libsdn-core.so.${project.version}" />
                            <include type="symlink" link="lib/libsdn-core.so.1" target="lib/libsdn-core.so.${project.version}" /> <!-- Required to have a file identical to soname -->
                            <include type="symlink" link="lib/libsdn-core.so" target="lib/libsdn-core.so.${project.version}" />
                            <!-- XML topic definition files -->
                            <include type="file" source="main/resources/sdn-header.xml" targetroot="CODAC_CONF" target="sdn/sdn-header.xml"/> <!-- Conflict atop CCSv5.2 installation -->
                            <include type="file" source="main/resources/sdn-footer.xml" targetroot="CODAC_CONF" target="sdn/sdn-footer.xml"/> <!-- Conflict atop CCSv5.2 installation -->
                            <include type="file" source="main/resources/sdn-packet.xml" targetroot="CODAC_CONF" target="sdn/sdn-packet.xml"/> <!-- Conflict atop CCSv5.2 installation -->
			    <!-- Package dependencies -->
                            <requires>libxml2</requires> <!-- XML parser library -->
                            <requires buildonly="true">libxml2-devel</requires>
                            <requires version="current">%{codac_rpm_prefix}-common</requires>
                            <requires version="current">%{codac_rpm_prefix}-cpp-common</requires>
                            <!--<requires version="current">%{codac_rpm_prefix}-sdn-topics</requires>--> <!-- Topic definition XML files -->
                            <!--<requires version="current">%{codac_rpm_prefix}-sdn-topics-devel</requires>--> <!-- Topic definition header files -->
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}-config</requires>
			    <!-- RPM deployment scripts -->
                        </package>
                        <package name="config">
			    <!-- Configuration files -->
                            <include type="config" source="main/resources/default-envvar" target="env.d/sdn-core" />
			    <!-- Scripts -->	    
                            <include type="script" scriptType="config" file="sdn-configure" mvneval="true" /> <!-- Parameters and behaviour associated to codac-configure script -->
			    <!-- Package dependencies -->
                            <requires version="current">%{codac_rpm_prefix}-common</requires>
			    <!-- RPM deployment scripts -->
                        </package>
                        <package name="devel">
			    <!-- Configuration files -->
                            <include type="config" source="main/resources/devel-envvar" target="env.d/sdn-core-devel" mvneval="true"/>
			    <!-- Header files -->
                            <include type="file" source="main/c++/include" target="include/sdn-core" />
                            <include type="file" source="main/c++/include" target="include/sdn-tools" /> <!-- Conflict atop CCSv5.2 installation -->
                            <include type="file" source="main/c++/include" target="include/common"> <!-- For backward compatibility -->
			        <include>any-type.h</include>
<!--
			        <include>base-api.h</include>
			        <include>mcast*.h</include>
			        <include>ucast*.h</include>
-->
			    </include>
			    <!-- Package dependencies -->
                            <requires>libxml2-devel</requires>
                            <requires version="current">%{codac_rpm_prefix}-cpp-common-devel</requires>
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}</requires>
                            <scriptlet type="posttrans">
                                <![CDATA[ if [ -f %{codac_rt}/include/sdn-core/any-type.h ]; then rm -rf ; fi ]]>
                                <![CDATA[ if [ -f %{codac_rt}/include/sdn-tools/any-type.h ]; then rm -rf ; fi ]]>
                                <![CDATA[ if [ -f %{codac_rt}/include/sdn-core/any-thread.h ]; then rm -rf ; fi ]]>
                                <![CDATA[ if [ -f %{codac_rt}/include/sdn-tools/any-thread.h ]; then rm -rf ; fi ]]>
                            </scriptlet>
                        </package>
                        <package name="doc">
                            <include type="doxygen">
                                <outputformat>html</outputformat>
                                <!-- <outputformat>pdf</outputformat> -->
                                <input>main/c++/include/Participant.h</input>
                                <input>main/c++/include/Publisher.h</input>
                                <input>main/c++/include/Subscriber.h</input>
                                <input>main/c++/include/AsynchronousSubscriber.h</input>
                                <input>main/c++/include/sdn-topic-xml.h</input>
                                <!--<examplepath>main/c++/examples</examplepath>-->
                                <properties>
                                    <PREDEFINED>__cplusplus</PREDEFINED>
                                    <HIDE_UNDOC_CLASSES>NO</HIDE_UNDOC_CLASSES>
                                    <EXTRACT_ALL>YES</EXTRACT_ALL>
                                    <MACRO_EXPANSION>NO</MACRO_EXPANSION>
                                    <RECURSIVE>NO</RECURSIVE>
                                    <SHOW_FILES>YES</SHOW_FILES>
                                    <SOURCE_BROWSER>YES</SOURCE_BROWSER>
                                </properties>
                            </include>
			    <!-- Package dependencies -->
                        </package>
                        <package name="example">
			    <!-- Example files -->
                            <include type="file" source="main/c++/examples" target="examples/sdn-core" />
			    <!-- Package dependencies -->
                            <requires version="current">%{codac_rpm_prefix}-cpp-common-devel</requires>
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}</requires>
                        </package>
                        <package name="tools">
<!--
                            <include type="file" source="bin/hash" target="tests/sdn-core/tools/sdn-hash" />
                            <include type="file" source="bin/check-iface" target="tests/sdn-core/tools/check-iface" />
                            <include type="file" source="bin/introspect" target="tests/sdn-core/tools/introspect" />
                            <include type="file" source="bin/sdn-one-pps" target="tests/sdn-core/tools/sdn-one-pps" />
                            <include type="file" source="bin/sdn-pub" target="tests/sdn-core/tools/sdn-pub" />
                            <include type="file" source="bin/sdn-sub" target="tests/sdn-core/tools/sdn-sub" />
                            <include type="file" source="bin/sdn-ping" target="tests/sdn-core/tools/sdn-ping" />
                            <include type="file" source="bin/sdn-echo" target="tests/sdn-core/tools/sdn-echo" />
                            <include type="file" source="test/resources" targetroot="CODAC_CONF" target="sdn" />
-->
			    <!-- Package dependencies -->
                            <requires version="current">%{codac_rpm_prefix}-cpp-common</requires>
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}</requires>
                        </package>
                        <package name="tests">
                            <!-- Unit Test -->
                            <include type="file" source="bin/unit-tests" target="tests/sdn-core/unit-tests"/>
                            <include type="file" source="bin/regression-tests" target="tests/sdn-core/regression-tests"/>
                            <!-- XML topic definition files -->
                            <include type="file" source="test/resources" targetroot="CODAC_CONF" target="sdn">
                                <include>*.xml</include>
			    </include>
			    <!-- Package dependencies -->
                            <requires version="current">gtest</requires>
                            <requires version="current" buildOnly="true">gtest-devel</requires>
                            <requires version="current">%{codac_rpm_prefix}-${project.artifactId}-config</requires>
                        </package>
                    </packaging>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
